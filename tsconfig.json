{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "baseUrl": ".",
    "paths": {
      "common/*": ["./common/*"],
      "logger/*": ["./logger/*"],
      "@prisma/client": ["./database/generated/index.d.ts"]
    },
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": [
    "back/**/*",
    "front/**/*",
    "common/**/*",
    "logger/**/*",
    "database/**/*",
    "environments/**/*"
  ]
}