{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "baseUrl": ".",
    "paths": {
      "@lakovna/common/*": ["./common/*"],
      "@lakovna/logger/*": ["./logger/*"],
      "@lakovna/common": ["./common/types/index.ts"],
      "@lakovna/logger": ["./logger/core-logger.ts"]
    },
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  }
}