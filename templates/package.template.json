

{
  "name": "{{PROJECT_NAME}}",
  "version": "1.0.0",
  "description": "{{PROJECT_DESCRIPTION}}",
  "private": true,
  "workspaces": [
    "back",
    "front"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:back\" \"npm run dev:front\"",
    "dev:back": "npm run dev --workspace=back",
    "dev:front": "npm run dev --workspace=front",
    "build": "npm run build:back && npm run build:front",
    "build:back": "npm run build --workspace=back",
    "build:front": "npm run build --workspace=front",
    "start": "npm run start --workspace=back",
    "db:migrate": "npx prisma migrate dev",
    "db:push": "npx prisma db push",
    "db:seed": "npx prisma db seed",
    "db:studio": "npx prisma studio",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx",
    "test": "jest",
    "test:watch": "jest --watch",
    "clean": "rm -rf node_modules back/node_modules front/node_modules"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "prisma": "^5.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "@prisma/client": "^5.7.0",
    "dotenv": "^16.3.1",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/{{PROJECT_NAME}}/{{PROJECT_NAME}}.git"
  },
  "keywords": [
    "{{PROJECT_NAME}}",
    "{{PLATFORM_TYPE}}",
    "{{BUSINESS_MODEL}}",
    "saas",
    "platform"
  ],
  "author": "{{PROJECT_DISPLAY_NAME}} Team",
  "license": "PROPRIETARY"
}